@using FrameworkDev.Web.Helpers
@using FrameworkDev.Web.Models

@model VM_Login


<style>
    .nav-pills > li {
        float: right !important;
        text-align: center !important;
        width: 278px !important;
    }

        .nav-pills > li.active > a, .nav-pills > li.active > a:focus, .nav-pills > li.active > a:hover {
            color: #000 !important;
            background-color: #ffffff !important;
        }

    .login100-form-register {
        width: 280px;
        margin-top: 20px;
        padding-right: 16px;
    }

    .login100-form-register1 {
        width: 280px;
        margin-top: 20px;
        padding-right: 300px;
    }
</style>


@{
    ViewBag.Title = "ورود به حساب کاربری";
    Layout = "~/Views/Shared/_LayoutAnonymus.cshtml";

    Session["WebGISApiUrl"] = "http://88.99.200.118:2000/arcgis_js_v318_api";
    //Session["WebGISApiUrl"] = "http://localhost:2000";
}

<div class="limiter overlay">
    <div class="container-login100 ui grid ">

        <div class="wrap-login100 ">
            <div class="wrap-login101 ui grid ">
                <span>برنامه</span>
            </div>

            <ul class="nav nav-pills nav-fill" id="myTab" role="tablist">
                <li class="nav-item active">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#loginId" role="tab" aria-controls="home" aria-selected="true" style="color:#fff">ورود</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#registerId" role="tab" aria-controls="profile" aria-selected="false" style="color:#fff">ثبت نام</a>
                </li>

            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active in" id="loginId" role="tabpanel" aria-labelledby="home-tab">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "validate-form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="login100-form">
                            <div class="wrap-input100 validate-input" data-validate="نام كاربری معتبر مورد نیاز است">
                                @Html.EditorFor(model => model.UserName, "AccTextBoxFor")
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger", @style = "text-align:left;" })
                            </div>

                            <div class="wrap-input100 validate-input" data-validate="رمز عبور مورد نیاز است">
                                @Html.EditorFor(model => model.Password, "AccPassword")
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger", @style = "text-align:left;" })
                            </div>

                            <div class="wrap-input100">
                                @Html.EditorFor(model => model.RememberMe, "AccRememberMe")
                            </div>

                            <div class="container-login100-form-btn">
                                <button class="login100-form-btn">
                                    ورود
                                </button>
                            </div>

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="text-right p-t-12"></div>
                            <br />
                        </div>
                    }
                </div>
                <div class="tab-pane fade" id="registerId" role="tabpanel" aria-labelledby="profile-tab">
                    @using (Html.BeginForm("AddUser", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "validate-form" }))
                    {
                        @Html.AntiForgeryToken()

                    <div class="col-md-6">
                        <div class="wrap-input100 validate-input" data-validate="نام و نام خانوادگی">
                            @Html.EditorFor(model => model.FullName, "AccTextBoxFor")
                            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger", @style = "text-align:left;" })
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="پسورد">
                            @Html.EditorFor(model => model.Password, "AccPassword")
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", @style = "text-align:left;" })
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="رايانامه">
                            @Html.EditorFor(model => model.Email, "AccTextBoxFor")
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger", @style = "text-align:left;" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="wrap-input100 validate-input" data-validate="نام کاربری ">
                            @Html.EditorFor(model => model.UserName, "AccTextBoxFor")
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger", @style = "text-align:left;" })
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="تکرار پسورد ">
                            @Html.EditorFor(model => model.ConfirmPassword, "AccPassword")
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger", @style = "text-align:left;" })
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="شماره همراه">
                            @Html.EditorFor(model => model.Mobile, "AccTextBoxFor")
                            @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger", @style = "text-align:left;" })
                        </div>
                    </div>

                        <div class="container-login100-form-btn">
                            <button class="login100-form-btn">
                                ثبت نام
                            </button>
                        </div>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="text-right p-t-12"></div>
                        <br />
                    }
                </div>
            </div>



        </div>
    </div>
</div>

