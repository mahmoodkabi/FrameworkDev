@using Kendo.Mvc.UI
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>
        @FrameworkDev.Web.Resources.DisplayNames.ApplicationTitle - @if (!string.IsNullOrWhiteSpace(ViewBag.Title))
        {@ViewBag.Title;
    }
    </title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Html.Partial("~/Views/Shared/Partials/_Dependencies.cshtml")
</head>
<body dir="rtl" class="k-rtl skin-blue fixed sidebar-mini">
    @RenderBody()

    @(Html.Kendo().Notification().Name("PopupNotification"))

    <script id="errorTemplate" type="text/x-kendo-template">
        <div class="notify-error">
            <img src="/content/images/notification/error.png" />
            <h3>#= title #</h3>
            <p>#= message #</p>
            <span>#= datetime #</span>
        </div>
    </script>
    <script id="successTemplate" type="text/x-kendo-template">
        <div class="notify-success">
            <img src="/content/images/notification/success.png" />
            <h3>#= title #</h3>
            <p>#= message #</p>
            <span>#= datetime #</span>
        </div>
    </script>
    <script id="infoTemplate" type="text/x-kendo-template">
        <div class="notify-info">
            <img src="/content/images/notification/info.png" />
            <h3>#= title #</h3>
            <p>#= message #</p>
            <span>#= datetime #</span>
        </div>
    </script>

    <script src="@RouteJs.RouteJsHandler.HandlerUrl" type="text/javascript"></script>
    <script src="@Url.Content("/Content/js/GeneralFunction.js")" type="text/javascript"></script>
    @RenderSection("ViewSpecificJavascript", required: false)
</body>
</html>
