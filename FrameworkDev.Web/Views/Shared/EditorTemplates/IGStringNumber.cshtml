@using Kendo.Mvc.UI

@model decimal?

<div class="rTableRow">
    <div class="rTableHead k-header">
        @Html.LabelFor(model => model, htmlAttributes: new { @class = "control-label", style = "min-width: 100px;" })
    </div>
    <div class="rTableCell">
        @Html.Kendo().NumericTextBoxFor(model => model).Spinners(false).HtmlAttributes(new { @class = "form-control" }).Format("{0:n0}")

        @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })
    </div>
</div>