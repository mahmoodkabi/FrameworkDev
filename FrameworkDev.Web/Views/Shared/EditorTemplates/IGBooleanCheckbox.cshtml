@using Kendo.Mvc.UI

@model bool?

<div class="form-group row">
    @Html.LabelFor(model => model, htmlAttributes: new { @class = "col-sm-3 col-form-label lable-framework", style = "min-width: 100px;" })
    <div class="col-sm-9">
        @Html.Kendo().CheckBoxFor(m => m).Label(string.Empty).Checked(Model.HasValue && Model.Value).HtmlAttributes(new { @class = "form-control", style = "margin: 7px;" })
        @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })
    </div>
</div>

